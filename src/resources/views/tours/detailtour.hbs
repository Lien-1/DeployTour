            </div>
            <div style="text-align: left;">
                <span>Nội dung:</span>
                <p>{{this.NoiDung}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{!-- overlay để hiện phóng to cái img --}}
<div id="overlay-img-tour">
    <img src="/img/tour1/hoian1.png" alt="" id="tour-img-zoom-in-overlay">
</div>

<script>
    $('.tour-img').on('click', function () {
        console.log($(this).attr('src'))
        $('#tour-img-zoom-in-overlay').attr('src', $(this).attr('src'))
        $('#overlay-img-tour').css('display', 'block')

    })
    $('#overlay-img-tour').on('click', function () {
        $(this).css('display', 'none')
    })
    $('.container-item-tag').removeClass('active')
    $('.container-item-tag').eq(3).addClass('active')

</script>