    <p class="header-title">Các địa điểm nổi tiếng</p>
    {{!-- list img --}}
    <div class="detailtour__img" >
        {{#each img}}
        <div class="detailtour__img-pic" >
            <img src="{{this.url}}" alt="" class="tour-img">
        </div>
        {{/each}}
    </div>
    <p class="header-title header-title-descpt">Mô tả</p>
    <p class="detail-tour">
        {{#each detailTour}}
        {{this.MoTa}}
        {{/each}}
    </p>
    <p class="header-title header-title-descpt">Lịch trình cụ thể</p>
    <div class="discrpition">
        {{#each detailLichTrinh}}
        <div  class="discrpition-detail" style="display: grid;grid-template-columns: 45% 10% 45%;">
            <div >
                <span>{{this.NgayGio}}</span>
                <span>11:20 - 12:40</span>
            </div>
            <div class="local-icon">
                <i class="fas fa-map-marker-alt"></i>
