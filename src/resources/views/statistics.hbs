<link rel="stylesheet" href="/css/statistics.css">
<div class="statistics">
<div class="statistics__container">
    <h3 class="statistic-heading">Thống kê tour</h3>
    <div id="chart-tour"></div>
    <div>
        <table>
            <tr>
                <th>MaTour</th>
                <th>ChiPhi</th>
                <th>Số đoàn đã đi</th>
            </tr>
            {{#each tableTours}}
            <tr>
                <td class="statistic-tableTours-MaTour">{{this.MaTour}}</td>
                <td class="statistic-tableTours-ChiPhi">{{this.ChiPhi}}</td>
                <td class="statistic-tableTours-Count">{{this.Count}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>
<div class="statistics__container">
    <h3 class="statistic-heading">Thống kê nhân viên</h3>
    <div id="chart-nhanvien"></div>
    <div style="margin: 20px ">
        <table>
            <tr>
                <th>MaNhanVien</th>
                <th>TenNhanVien</th>
                <th>ChucVu</th>
                <th>Những tour đã đi</th>
            </tr>
            {{#each tableNhanViens}}
            <tr>
                <td class="statistic-tableNhanViens-MaNhanVien">{{this.MaNhanVien}}</td>
                <td class="statistic-tableNhanViens-TenNhanVien">{{this.TenNhanVien}}</td>
                <td class="statistic-tableNhanViens-ChucVu">{{this.ChucVu}}</td>
                <td class="statistic-tableNhanViens-CountMaDoan">{{this.CountMaDoan}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>
</div>
